@model RentMojoWebApp.Models.Order

@{
    ViewData["Title"] = "Check Out";
}

<h1 class="text-center">Check Out</h1>
<h2 >Name: @ViewData["Name"]</h2>
<h2>Initial Deposit: $ @ViewData["Deposit"]</h2>
<h2 >Monthly Rent: $ @ViewData["MonthlyRent"]</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="ProcessCheckOut">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control" ></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
                <input asp-for="ProductID" type="hidden" value='@ViewData["ProductID"]' class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Process Your Order" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
