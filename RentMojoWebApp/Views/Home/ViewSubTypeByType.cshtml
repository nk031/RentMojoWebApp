@model IEnumerable<RentMojoWebApp.Models.RentSubType>

@{
    ViewData["Title"] = "Sub Types";
}
<div class="text-center">
    <h1 class="display-4 heading-font">@ViewData["TypeName"]</h1>
</div>
<hr />
<div class="row" style="margin-bottom:50px;">
    @foreach (var item in Model)
    {
        <div class="col-md-12 mb-2">
            <div class="card">
                <center>
                    <img src="~/images/subtypes/@item.SubTypeID@item.Extension" style="width:100%;height:300px" alt="">
                </center>
                <div class="card-body">
                    <a class="btn btn-success btn-block text-center"
                       asp-action="ViewProductBySubTypeID" asp-route-id="@item.SubTypeID">@item.SubTypeName</a>
                </div>

            </div>
        </div>
    }
</div> 