@model IEnumerable<RentMojoWebApp.Models.RentType>
@{
    ViewData["Title"] = "Home Page";
}
<div id="demo" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/slides/slide1.jpg" alt="Slide 1" style="width:100%;height:500px">
            <div class="carousel-caption">
                Appliances
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slides/slide2.jpg" alt="Slide 2" style="width:100%;height:500px"> 
            <div class="carousel-caption text-dark">
                Furniture 
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slides/slide3.jpg" alt="Slide 3" style="width:100%;height:500px">
            <div class="carousel-caption">
                Electronics
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>
<hr />
<div class="row" style="margin-bottom:50px;">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <center>
                    <img src="~/images/types/@item.TypeID@item.Extension" alt="" >
                </center>
                <div class="card-body">
                    <a class="btn btn-success btn-block text-center"
                       asp-action="ViewSubTypeByType" asp-route-id="@item.TypeID">@item.TypeName</a>
                </div>

            </div>
        </div>
    }
</div>